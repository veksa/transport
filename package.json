{
  "name": "@veksa/transport",
  "version": "0.0.17",
  "description": "A reactive transport layer for messaging communication with pluggable adapters and RxJS observables",
  "homepage": "https://github.com/veksa/transport",
  "packageManager": "yarn@4.12.0",
  "engines": {
    "node": ">=16.0.0",
    "yarn": ">=3.0.0"
  },
  "author": {
    "name": "Aleksandr Khizhnyi",
    "email": "mendler88@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:veksa/transport.git"
  },
  "main": "./dist/cjs/index.cjs",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/cjs/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "keywords": [
    "transport",
    "messaging",
    "rxjs",
    "typescript",
    "communication",
    "socket",
    "reactive",
    "stream"
  ],
  "scripts": {
    "clean": "rimraf lib es dist",
    "build": "yarn clean && tsup",
    "compile": "tsc --noEmit",
    "prepublish": "yarn build"
  },
  "peerDependencies": {
    "@veksa/logger": "^1.0.12"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "@veksa/logger": "^1.0.12",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "rxjs": "^7.8.2",
    "uuid": "^13.0.0"
  }
}
