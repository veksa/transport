{
  "name": "@veksa/transport",
  "version": "0.0.12",
  "description": "A reactive transport layer for messaging communication with pluggable adapters and RxJS observables",
  "homepage": "https://github.com/veksa/transport",
  "packageManager": "yarn@4.9.2",
  "author": {
    "name": "Aleksandr Khizhnyi",
    "email": "mendler88@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:veksa/transport.git"
  },
  "main": "./dist/cjs/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/cjs/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "keywords": [
    "transport",
    "messaging",
    "rxjs",
    "typescript",
    "communication",
    "socket",
    "reactive",
    "stream"
  ],
  "scripts": {
    "clean": "rimraf lib es dist",
    "build": "yarn clean && tsup",
    "compile": "tsc --noEmit",
    "prepublish": "yarn build"
  },
  "peerDependencies": {
    "@veksa/logger": "^1.0.11"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@veksa/logger": "^1.0.11",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "rxjs": "^7.8.2",
    "uuid": "^11.1.0"
  }
}
